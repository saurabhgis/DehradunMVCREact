@{
    var returnUrl = ViewData["ReturnUrl"] as string;
}

@*?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)*@
<html>
<head>
    <title>SignIn</title>
</head>
<body>
    <form method="post" action="/Home/SignIn" className="mt-4">
        <div style="text-align:center;color:red">
            @Html.AntiForgeryToken()
            @Html.ValidationMessage("CustomError")
        </div>
        <div id="content"></div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    </form>
    <a href="/#/"><button class="btn btn-success" style="width:100%">Back to Home</button></a>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/16.13.0/umd/react.development.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/16.13.0/umd/react-dom.development.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/remarkable/1.7.1/remarkable.min.js"></script>
    <script src="@Url.Content("~/js/SignIn.jsx")"></script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
